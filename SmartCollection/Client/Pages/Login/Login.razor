@page "/login"
@layout AuthLayout
@inject Authorization.IAuthService AuthService
@inject NavigationManager NavigationManager 

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-12 col-lg-12 col-md-12">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body align-content-center p-0">
                        <!-- Nested Row within Card Body -->
                        
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Sign In</h1>
                                    </div>
                                    <EditForm Model="@LoginModel" OnValidSubmit="@OnSubmit" class="user">
                                        <DataAnnotationsValidator />
                                        <div class="form-group">
                                            <InputText @bind-Value="@LoginModel.Email" class="form-control form-control-user"
                                                       aria-describedby="emailHelp"
                                                       placeholder="Enter Email Address" />
                                            <ValidationMessage For=" () => LoginModel.Email" />
                                        </div>
                                        <div class="form-group">
                                            <InputText type="password" @bind-Value="@LoginModel.Password" class="form-control form-control-user"
                                                       placeholder="Enter Password" />
                                            <ValidationMessage For=" () => LoginModel.Password" />
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <InputCheckbox id="rememberMeCheckbox" @bind-Value="@LoginModel.RememberMe" class="custom-control-input" />
                                                <label class="custom-control-label" for="rememberMeCheckbox">
                                                    Remember Me
                                                </label>
                                            </div>
                                        </div>

                                        @if (ShowError)
                                        {
                                            <span class="text-warning">Login attempt failed. @Error</span>
                                        }

                                        <button type="submit" class="btn btn-primary btn-user btn-block">
                                            Log in
                                        </button>
                                        <hr>
                                        <a href="index.html" class="btn btn-google btn-user btn-block">
                                            <i class="bi bi-google"></i> Login with Google
                                        </a>
                                        <a href="index.html" class="btn btn-facebook btn-user btn-block">
                                            <i class="bi bi-facebook"></i> Login with Facebook
                                        </a>
                                    </EditForm>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="/forgotpassword">Forgot Password?</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="/register">Create an Account!</a>
                                    </div>
                                </div>
                            </div>
                        
                    </div>
                </div>

            </div>

        </div>

    </div>
