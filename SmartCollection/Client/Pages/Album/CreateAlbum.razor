@page "/createalbum"

<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-sm-12 col-md-6 col-lg-6">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body align-content-center p-0">
                    <!-- Nested Row within Card Body -->

                    <div class="col-sm-12 col-lg-10 mx-auto">
                        <div class="p-5">
                            <div class="text-center">
                                <div class="h1 rotate-15"><i class="bi bi-images"></i></div>
                                <h1 class="h4 text-gray-900 mb-4">
                                    Create Your New Album
                                </h1>
                            </div>
                            <EditForm Model="@AlbumModel" class="user">
                                <div class="form-group">
                                    <label class="text-gray-900" for="name">
                                        Give your album a name!
                                    </label>
                                    <InputText @bind-Value="AlbumModel.Name" id="name" class="form-control" placeholder="Trip to Indonesia" />
                                </div>
                                <div class="form-group mt-3">
                                    <label class="text-gray-900" for="brief">
                                        Describe it with a few words!
                                    </label>
                                    <InputTextArea @bind-Value="AlbumModel.Brief" id="brief" class="form-control" placeholder="Best memories from Indonesia <3" />
                                </div>
                                <div class="form-group">
                                    <div class="mt-4">
                                        <h1 class="h6 text-gray-900">Decide if you want to share it to someone!</h1>
                                    </div>
                                    <div class="row custom-control custom-radio">
                                        <div class="col-sm-12 col-md-6">
                                            <input type="radio" name="privacy" class="custom-control-input" id="private" checked 
                                                   @onchange="@(() => AlbumModel.PrivacyType = false)" />
                                            <label class="custom-control-label" for="private">
                                                Private
                                            </label>
                                        </div>
                                        <div class="col-sm-12 col-md-6">
                                            <input type="radio" name="privacy" class="custom-control-input" id="public" 
                                                   @onchange="@(() => AlbumModel.PrivacyType = true)" />
                                            <label class="custom-control-label" for="public">
                                                Public
                                            </label>
                                        </div>
                                    </div>

                                </div>
                                <!-- submit button -->
                                <a href="#" class="btn btn-primary btn-user btn-block mt-5">
                                    <i class="bi bi-check-lg"></i><span class="px-3">Create</span>
                                </a>

                            </EditForm>
                            
                        </div>
                    </div>

                </div>
            </div>

        </div>

    </div>

</div>


@code {
    public class TempAlbumModel
    {
        public string Name { get; set; }
        public string Brief { get; set; }
        public bool PrivacyType { get; set; }
    }

    private TempAlbumModel AlbumModel = new();

}
