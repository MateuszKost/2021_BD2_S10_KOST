@page "/forgot-password"

<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-12 col-lg-12 col-md-12">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body align-content-center p-0">

                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Recover account</h1>
                            </div>
                            <form class="user">
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-user"
                                           id="exampleInputEmail" aria-describedby="emailHelp"
                                           placeholder="Enter email address...">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control form-control-user"
                                           id="exampleInputPassword" placeholder="Enter your last remembered password">
                                </div>

                                <a href="index.html" class="btn btn-primary btn-user btn-block">
                                    send an email authentification
                                </a>

                                <hr />

                                <a href="index.html" class="btn btn-google btn-user btn-block">
                                    <i class="bi bi-google"></i> Login with Google
                                </a>
                                <a href="index.html" class="btn btn-facebook btn-user btn-block">
                                    <i class="bi bi-facebook"></i> Login with Facebook
                                </a>
                            </form>
                        </div>
                    </div>

                </div>
            </div>

        </div>

    </div>

</div>
